// Q112 (Logic Enhancers)
// Program to find maximum sum of any contiguous subarray using Kadane's Algorithm

#include <stdio.h>

int main() {
    int arr[100], size;

    // Input array size and elements
    printf("Enter size of array: ");
    scanf("%d", &size);
    printf("Enter %d elements:\n", size);
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Kadane's Algorithm
    int maxSum = arr[0];
    int currentSum = arr[0];

    for (int i = 1; i < size; i++) {
        if (currentSum < 0)
            currentSum = arr[i];
        else
            currentSum += arr[i];

        if (currentSum > maxSum)
            maxSum = currentSum;
    }

    // Output result
    printf("%d\n", maxSum);

    return 0;
}