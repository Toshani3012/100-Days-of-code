// Q44 (Loops without Arrays/Strings)
// Write a program to find the sum of the series: 1 + 3/4 + 5/6 + 7/8 + â€¦ up to n terms.

#include <stdio.h>

int main() {
    int n, num = 1, den = 1;
    float sum = 0;
    printf("Enter number of terms: ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        sum += (float)num / den;
        num += 2;
        den += 2;
    }

    printf("Sum of the series: %.2f\n", sum);
    return 0;
}