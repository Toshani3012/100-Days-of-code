// Q98: Print initials of a name with the surname displayed in full

#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char name[100], word[20], surname[20];
    int i = 0, j = 0, k = 0;

    printf("Enter full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove trailing newline
    name[strcspn(name, "\n")] = '\0';

    int len = strlen(name);
    for (i = 0; i < len; i++) {
        if (name[i] != ' ') {
            word[j++] = name[i];
        } else {
            word[j] = '\0';
            printf("%c. ", toupper(word[0]));
            j = 0;
        }
    }

    // Last word is surname
    word[j] = '\0';
    printf("%s\n", word);

    return 0;
}

