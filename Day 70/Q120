#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    FILE *fptr_in, *fptr_out;
    char str[200];

  
    fptr_in = fopen("input.txt", "r");
    if (fptr_in == NULL) {
        printf("Error opening input file!\n");
        return 1;
    }

    
    fgets(str, sizeof(str), fptr_in);
    fclose(fptr_in);

    
    int len = strlen(str);
    for (int i = 0; i < len; i++) {
        if (i == 0) {
            str[i] = toupper(str[i]);   
        } else {
            str[i] = tolower(str[i]);   
        }
    }

    
    fptr_out = fopen("output.txt", "w");
    if (fptr_out == NULL) {
        printf("Error opening output file!\n");
        return 1;
    }


    fputs(str, fptr_out);
    fclose(fptr_out);

    printf("Sentence case string written to output.txt\n");

    return 0;
}
