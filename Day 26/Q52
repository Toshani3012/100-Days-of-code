// Q52 (Nested Loops without Arrays/Strings)
// Write a program to print the following pattern:
//
// *
// *
// *
// *
// *
// *
// *
// *
// *
// *
// *
// *
// *
// *

#include <stdio.h>

int main() {
    // Define the number of stars in each group
    int group_sizes[] = {1, 3, 5, 3, 1};
    int total_groups = 5;

    for (int i = 0; i < total_groups; i++) {
        for (int j = 0; j < group_sizes[i]; j++) {
            printf("*\n");
        }
        // Print a blank line between groups (except after the last group)
        if (i < total_groups - 1)
            printf("\n");
    }

    return 0;
}