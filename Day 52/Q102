// Q102 (Logic Enhancers)
// Program to find the index of the smallest element >= x (ceil of x) in a sorted array

#include <stdio.h>

// Function to find ceil index using binary search
int findCeilIndex(int arr[], int size, int x) {
    int low = 0, high = size - 1, result = -1;
    while (low <= high) {
        int mid = low + (high - low) / 2;
        if (arr[mid] >= x) {
            result = mid;      // potential ceil found
            high = mid - 1;    // search left half for earlier occurrence
        } else {
            low = mid + 1;
        }
    }
    return result;
}

int main() {
    int arr[100], size, x;

    // Input array size and elements
    printf("Enter size of sorted array: ");
    scanf("%d", &size);
    printf("Enter %d sorted elements:\n", size);
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Input target x
    printf("Enter value x to find ceil: ");
    scanf("%d", &x);

    // Find and print ceil index
    int index = findCeilIndex(arr, size, x);
    printf("%d\n", index);

    return 0;
}