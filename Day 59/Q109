// Q109 (Logic Enhancers)
// Program to find the maximum sum of all subarrays of size k

#include <stdio.h>

int main() {
    int arr[100], size, k;

    // Input array size and elements
    printf("Enter size of array: ");
    scanf("%d", &size);
    printf("Enter %d elements:\n", size);
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Input window size k
    printf("Enter subarray size k: ");
    scanf("%d", &k);

    // Edge case: if k > size
    if (k > size || k <= 0) {
        printf("Invalid subarray size\n");
        return 1;
    }

    // Compute initial window sum
    int maxSum = 0, windowSum = 0;
    for (int i = 0; i < k; i++) {
        windowSum += arr[i];
    }
    maxSum = windowSum;

    // Slide the window
    for (int i = k; i < size; i++) {
        windowSum += arr[i] - arr[i - k];
        if (windowSum > maxSum) {
            maxSum = windowSum;
        }
    }

    // Output result
    printf("%d\n", maxSum);

    return 0;
}