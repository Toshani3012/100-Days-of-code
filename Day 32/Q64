// Q64: Find the digit that occurs the most times in an integer number

#include <stdio.h>

int main() {
    long long num;
    int freq[10] = {0};

    // Input number
    printf("Enter an integer number: ");
    scanf("%lld", &num);

    // Count digit frequencies
    while(num > 0) {
        int digit = num % 10;
        freq[digit]++;
        num /= 10;
    }

    // Find digit with max frequency
    int maxFreq = 0, mostFreqDigit = 0;
    for(int i = 0; i < 10; i++) {
        if(freq[i] > maxFreq) {
            maxFreq = freq[i];
            mostFreqDigit = i;
        }
    }

    printf("Digit %d occurs the most (%d times).\n", mostFreqDigit, maxFreq);

    return 0;
}
