// Q79: Perform diagonal traversal of a matrix (zigzag pattern)

#include <stdio.h>

int main() {
    int m, n;
    printf("Enter rows and columns of matrix: ");
    scanf("%d %d", &m, &n);

    int mat[m][n];
    printf("Enter matrix elements:\n");
    for (int i = 0; i < m; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &mat[i][j]);

    printf("Diagonal Traversal:\n");
    for (int d = 0; d < m + n - 1; d++) {
        if (d % 2 == 0) {
            // Traverse up-right
            int i = (d < m) ? d : m - 1;
            int j = d - i;
            while (i >= 0 && j < n)
                printf("%d ", mat[i--][j++]);
        } else {
            // Traverse down-left
            int j = (d < n) ? d : n - 1;
            int i = d - j;
            while (j >= 0 && i < m)
                printf("%d ", mat[i++][j--]);
        }
    }
    printf("\n");
    return 0;
}
