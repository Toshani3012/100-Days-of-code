// Q99: Change date format from dd/mm/yyyy to dd-MMM-yyyy without predefined functions

#include <stdio.h>

int main() {
    char date[20];
    char day[3], month[3], year[5];
    char monthName[4];

    printf("Enter date in dd/mm/yyyy format: ");
    for (int i = 0; i < 10; i++)
        scanf("%c", &date[i]);

    // Extract day
    day[0] = date[0];
    day[1] = date[1];
    day[2] = '\0';

    // Extract month
    month[0] = date[3];
    month[1] = date[4];
    month[2] = '\0';

    // Extract year
    year[0] = date[6];
    year[1] = date[7];
    year[2] = date[8];
    year[3] = date[9];
    year[4] = '\0';

    // Convert month string to integer manually
    int m = (month[0] - '0') * 10 + (month[1] - '0');

    // Map month number to abbreviation
    if (m == 1) { monthName[0] = 'J'; monthName[1] = 'a'; monthName[2] = 'n'; }
    else if (m == 2) { monthName[0] = 'F'; monthName[1] = 'e'; monthName[2] = 'b'; }
    else if (m == 3) { monthName[0] = 'M'; monthName[1] = 'a'; monthName[2] = 'r'; }
    else if (m == 4) { monthName[0] = 'A'; monthName[1] = 'p'; monthName[2] = 'r'; }
    else if (m == 5) { monthName[0] = 'M'; monthName[1] = 'a'; monthName[2] = 'y'; }
    else if (m == 6) { monthName[0] = 'J'; monthName[1] = 'u'; monthName[2] = 'n'; }
    else if (m == 7) { monthName[0] = 'J'; monthName[1] = 'u'; monthName[2] = 'l'; }
    else if (m == 8) { monthName[0] = 'A'; monthName[1] = 'u'; monthName[2] = 'g'; }
    else if (m == 9) { monthName[0] = 'S'; monthName[1] = 'e'; monthName[2] = 'p'; }
    else if (m == 10) { monthName[0] = 'O'; monthName[1] = 'c'; monthName[2] = 't'; }
    else if (m == 11) { monthName[0] = 'N'; monthName[1] = 'o'; monthName[2] = 'v'; }
    else if (m == 12) { monthName[0] = 'D'; monthName[1] = 'e'; monthName[2] = 'c'; }
    else {
        printf("Invalid month.\n");
        return 0;
    }
    monthName[3] = '\0';

    // Final output
    printf("Formatted date: %s-%s-%s\n", day, monthName, year);
    return 0;
}
