// Q113 (Logic Enhancers)
// Program to find the kth smallest element in an array using sorting

#include <stdio.h>

// Simple bubble sort for small arrays
void bubbleSort(int arr[], int size) {
    for (int i = 0; i < size - 1; i++) {
        for (int j = 0; j < size - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                // Swap
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
}

int main() {
    int arr[100], size, k;

    // Input array size and elements
    printf("Enter size of array: ");
    scanf("%d", &size);
    printf("Enter %d elements:\n", size);
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Input k
    printf("Enter k (1-based index): ");
    scanf("%d", &k);

    // Validate k
    if (k <= 0 || k > size) {
        printf("Invalid value of k\n");
        return 1;
    }

    // Sort and print kth smallest
    bubbleSort(arr, size);
    printf("%d\n", arr[k - 1]);

    return 0;
}