// Q103 (Logic Enhancers)
// Program to find the leftmost pivot index where left sum == right sum

#include <stdio.h>

int findPivotIndex(int arr[], int size) {
    int totalSum = 0, leftSum = 0;

    // Calculate total sum of array
    for (int i = 0; i < size; i++) {
        totalSum += arr[i];
    }

    // Traverse to find pivot index
    for (int i = 0; i < size; i++) {
        int rightSum = totalSum - leftSum - arr[i];
        if (leftSum == rightSum) {
            return i;
        }
        leftSum += arr[i];
    }

    return -1; // No pivot index found
}

int main() {
    int arr[100], size;

    // Input array size and elements
    printf("Enter size of array: ");
    scanf("%d", &size);
    printf("Enter %d elements:\n", size);
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Find and print pivot index
    int pivot = findPivotIndex(arr, size);
    printf("%d\n", pivot);

    return 0;
}